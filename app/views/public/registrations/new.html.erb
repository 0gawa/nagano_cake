<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "publics/shared/error_messages", resource: resource %>
  
  <div class="field">
    <div>名前</div>
    <div>(姓)</div>
    <%= f.label :name_sei><br />
    <%= f.textfield :name_sei, autofocus: true%>
    
    <div>(名)</div>
    <%= f.label :name_mei><br />
    <%= f.textfield :name_mei, autofocus: true%>
  </div>
  
  <div class="field">
    <div>フリガナ</div>
    <div>(セイ)</div>
    <%= f.label :name_sei_kana><br />
    <%= f.textfield :name_sei_kana, autofocus: true%>
    
    <div>(メイ)</div>
    <%= f.label :name_mei_kana><br />
    <%= f.textfield :name_mei_kana, autofocus: true%>
  </div>
  
  <div class="field">
    <div>メールアドレス</div>
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  
  <div class="field">
    <div>郵便番号(ハイフンなし)</div>
    <%= f.label :post_code %><br />
    <%= f.number_field :post_code, autofocus: true, autocomplete: "post_code" %>
  </div>
  
  <div class="field">
    <div>住所</div>
    <%= f.label :address %><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>
  
  <div class="field">
    <div>電話番号(ハイフンなし)</div>
    <%= f.label :phone_number %><br />
    <%= f.telephone_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
